<div class="main-container">
  <h1 class="fi-magnifying-glass size-24"> Record details</h1>

  <p id="notice">
    <%= notice %>
  </p>

  <p>
    <b>Artist:</b>
    <%= @record.artist %>
  </p>

  <p>
    <b>Name:</b>
    <%= @record.name %>
  </p>

  <p>
    <b>Genre:</b>
    <%= @record.genre %>
  </p>

  <p>
    <b>Year:</b>
    <%= @record.year %>
  </p>

  <p>
    <b>Inc:</b>
    <%= @record.inc %>
  </p>

  <p>
    <b>Label:</b>
    <%= @record.label %>
  </p>

  <p>
    <b>Discogs id:</b>
    <%= @record.discogs_id %>
  </p>

  <p>
    <b>Rating:</b>
    <%= @record.rating %>
  </p>

  <p>
    <b>Comments:</b>
    <%= @record.comments %>
  </p>

  <p>
    <b>Created:</b>
    <%= @record.created_at %>
  </p>
  <p>
    <b>Updated:</b>
    <%= @record.updated_at %>
  </p>

  <div class="action-container">
    <div class="action-button">
      <span class="fi-wrench size-24">&nbsp;&nbsp;<%= link_to 'Edit', edit_record_path(@record) %></span>
    </div>
    <div class="action-button">
      <span class="fi-arrow-left size-24">&nbsp;&nbsp;<%= link_to 'Back to list', records_path %></span>
    </div>
  </div>

</div>
